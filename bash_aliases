#!/usr/bin/env bash

alias g="git"

alias vim-settings='$EDITOR ~/.config/nvim/init.vim'
alias bash-settings='$EDITOR ~/.bashrc'
alias bash-alias-settings='$EDITOR ~/.bash_aliases'
alias i3-settings-base='$EDITOR ~/.config/i3/base.template'
alias i3-settings-host='$EDITOR ~/.config/i3/host.template'
alias bash-reload='source ~/.bashrc'

